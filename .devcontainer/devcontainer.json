{
	"image": "mcr.microsoft.com/devcontainers/go:1.25-bookworm",
	"runArgs": ["--name", "hackerrank_devcontainer"],
	"features": {
		"ghcr.io/devcontainers/features/node:1": {
			"version": "24"
		},
		"ghcr.io/devcontainers-extra/features/bun:1": {
			"version": "1.3.9"
		}
	},
	"postCreateCommand": "bun install && bun run lefthook install",
	"customizations": {
		"vscode": {
			"extensions": [
				"oven.bun-vscode",
				"streetsidesoftware.code-spell-checker",
				"EditorConfig.EditorConfig",
				"golang.go",
				"bierner.markdown-checkbox",
				"bierner.markdown-preview-github-styles",
				"YoavBls.pretty-ts-errors",
				"streetsidesoftware.code-spell-checker-spanish",
				"github.vscode-github-actions",
				"redhat.vscode-yaml",
				"pflannery.vscode-versionlens",
				"oxc.oxc-vscode"
			],
			"settings": {
				"editor.formatOnSave": true,
				"editor.defaultFormatter": "oxc.oxc-vscode",
				"telemetry.telemetryLevel": "off",
				"telemetry.feedback.enabled": false,
				"files.exclude": {
					"**/.DS_Store": false,
					"**/.git": false,
					"**/.hg": false,
					"**/.svn": false,
					"**/Thumbs.db": false
				},
				"search.exclude": {
					"**/.DS_Store": true,
					"**/.git": true,
					"**/.hg": true,
					"**/.svn": true,
					"**/Thumbs.db": true,
					"**/node_modules": true,
					"**/bower_components": true,
					"**/*.code-search": true
				},
				"[go]": {
					"editor.defaultFormatter": "golang.go"
				},
				"go.showWelcome": false,
				"go.coverOnSingleTest": false,
				"go.coverOnTestPackage": false,
				"go.coverOnSingleTestFile": false,
				"go.testExplorer.alwaysRunBenchmarks": true,
				"go.testExplorer.packageDisplayMode": "nested",
				"go.inlayHints.parameterNames": true,
				"go.toolsManagement.autoUpdate": true,
				"go.editorContextMenuCommands": {
					"playground": false,
					"testAtCursor": false,
					"testCoverage": false,
					"toggleTestFile": false,
					"debugTestAtCursor": false
				},
				"oxc.fmt.configPath": ".oxfmtrc.json",
				"github.copilot.enable": {
					"*": true,
					"go": false,
					"typescript": false
				},
				"yaml.schemas": {
					"https://raw.githubusercontent.com/docker/vscode-extension/6a88caada42b57090df7ce91ec2a6561b422afe1/misc/empty.json": [
						".github/workflows/**/*.yaml"
					]
				}
			}
		}
	}
}
